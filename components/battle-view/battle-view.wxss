/* components/battle-view/battle-view.wxss */
.canvas{
  width: 100%;
  height: 300rpx;
  border: lightgray 1rpx solid;
  background-color: #636363;
}
.battle-background{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  top:0rpx;
  bottom:0rpx;
  right:0rpx;
  left:0rpx;
  position: absolute;
}
.battle-container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 68%;
  top:32%;
  bottom:0rpx;
  right:0rpx;
  left:0rpx;
  background-color: #333333;
  position: absolute;
}
.battle-title{
  color: white;
  display: flex;
  height: 5%;
  background-color: #333333;
  font-weight: bold;
  border: lightgreen 1rpx solid;
}
.battle-info{
  color: white;
  display: inline-block;
  height: fit-content;
  width: max-content;
  font-size: small;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  background-color: #333333;
}
.battle-scroll{
  display: inline-block;
  height: 20%;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  background-color: #333333;
  border: gray 1rpx solid;
}
